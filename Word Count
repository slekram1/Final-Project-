import Tkinter
def wordcount(file):
	file=open(file, "r")
	wordcount={}
	for word in file.read().split():
	    if word not in wordcount:
	        wordcount[word] = 1
	    else:
	        wordcount[word] += 1
	for k,v in wordcount.items():
	    print(k, v)

	print(wordcount)

def AVEsentence_length():
	wordcounts = []
	with open("trump1.txt") as f:
		text = f.read()
		sentences = text.split('.')
		for sentence in sentences:
			words = sentence.split(' ')
			wordcounts.append(len(words))
	average_wordcount = sum(wordcounts)/len(wordcounts)

	print(average_wordcount)

def averagewordlength(file):
	with open(file,'r') as f:
		w = [len(word) for line in f for word in line.rstrip().split(" ")]
		w_avg = sum(w)/len(w)

	print(w_avg)

def simplewords(testFile):
	f = open(testFile, 'r')
	f_match = open('SimpleWords.txt', 'r')
	count = 0 
	totalcount = 0
	dictionary = []
	for line in f:
		a, b = line.split()
		dictionary.append(a)

	for line in f_match:
		for word in line.split():
			if word in dictionary:
				count += 1
	num_lines = sum(1 for line in open("test.txt", "r")) 

	print(((count/num_lines)*100), "percent of the words used are simple English words.")			
	
simplewords()
